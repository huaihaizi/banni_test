<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigation_bar_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.hanwin.product.viewutils.CircleImageView
                android:id="@+id/image_picture"
                android:layout_width="@dimen/ui_160"
                android:layout_height="@dimen/ui_160"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/ui_30"
                android:src="@drawable/image_picture" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30">

                <TextView
                    android:id="@+id/tag"
                    android:layout_width="@dimen/ui_150"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/ui_30"
                    android:paddingBottom="@dimen/ui_30"
                    android:text="昵称"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_34" />

                <EditText
                    android:id="@+id/edit_person_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_5"
                    android:padding="@dimen/ui_30"
                    android:layout_toRightOf="@+id/tag"
                    android:background="@color/navigation_bar_bg"
                    android:hint="必填"
                    android:maxLines="1"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_30" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30"
                android:background="@color/gray_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30">

                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="@dimen/ui_150"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/ui_30"
                    android:paddingTop="@dimen/ui_30"
                    android:text="手机号"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_34" />

                <EditText
                    android:id="@+id/edit_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_5"
                    android:layout_toRightOf="@+id/tag1"
                    android:padding="@dimen/ui_30"
                    android:background="@color/navigation_bar_bg"
                    android:hint="必填"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_30" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30"
                android:background="@color/gray_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_100"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30">

                <TextView
                    android:id="@+id/tag5"
                    android:layout_width="@dimen/ui_150"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_34" />

                <RadioGroup
                    android:id="@+id/radiogroup_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ui_5"
                    android:layout_toRightOf="@+id/tag5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radiobtn_man"
                        style="@style/modify_personal_radiobutton"
                        android:layout_marginRight="@dimen/ui_30"
                        android:padding="@dimen/ui_30"
                        android:checked="true"
                        android:text="男"
                        android:textSize="@dimen/font_30" />

                    <RadioButton
                        android:id="@+id/radiobtn_woman"
                        style="@style/modify_personal_radiobutton"
                        android:padding="@dimen/ui_30"
                        android:text="女"
                        android:textSize="@dimen/font_30" />
                </RadioGroup>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30"
                android:background="@color/gray_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30">

                <TextView
                    android:id="@+id/tag2"
                    android:layout_width="@dimen/ui_150"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="密码"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_34" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_5"
                    android:padding="@dimen/ui_30"
                    android:layout_toRightOf="@+id/tag2"
                    android:background="@color/navigation_bar_bg"
                    android:hint="请输入新密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_30" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30"
                android:background="@color/gray_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30">

                <TextView
                    android:id="@+id/tag3"
                    android:layout_width="@dimen/ui_150"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="确认密码"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_34" />

                <EditText
                    android:id="@+id/edit_again_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_5"
                    android:padding="@dimen/ui_30"
                    android:layout_toRightOf="@+id/tag3"
                    android:background="@color/navigation_bar_bg"
                    android:hint="请确认新密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_30" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30"
                android:background="@color/gray_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30">

                <TextView
                    android:id="@+id/tag4"
                    android:layout_width="@dimen/ui_150"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="验证码"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_34" />

                <EditText
                    android:id="@+id/edit_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_5"
                    android:padding="@dimen/ui_30"
                    android:layout_toRightOf="@+id/tag4"
                    android:background="@color/navigation_bar_bg"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/font_30" />

                <TextView
                    android:id="@+id/text_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="@dimen/ui_30"
                    android:paddingRight="@dimen/ui_30"
                    android:text="获取验证码"
                    android:textColor="@color/color_ffc626"
                    android:textSize="@dimen/font_30" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_30"
                android:layout_marginRight="@dimen/ui_30"
                android:background="@color/gray_bg" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_126"
                android:layout_marginLeft="@dimen/navigation_bar_edit_margin"
                android:layout_marginRight="@dimen/navigation_bar_edit_margin"
                android:layout_marginTop="@dimen/ui_60"
                android:background="@drawable/button_bg"
                android:text="注册"
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_38"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/ui_5"
                android:layout_marginBottom="@dimen/margin_50"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/check_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/ui_30"
                    android:paddingBottom="@dimen/ui_30"
                    android:paddingLeft="@dimen/ui_5"
                    android:paddingRight="@dimen/ui_5"
                    android:background="@null"
                    android:src="@drawable/checkbox_checked" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/check_imageview"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/ui_5"
                    android:paddingTop="@dimen/ui_5"
                    android:text="我已阅读并同意"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_20" />

                <TextView
                    android:id="@+id/text_register_clause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text1"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/ui_5"
                    android:paddingTop="@dimen/ui_5"
                    android:text="用户注册协议"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_20" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>  