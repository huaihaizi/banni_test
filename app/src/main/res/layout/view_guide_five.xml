<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/ui_30"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_230"
        android:layout_marginLeft="@dimen/ui_120"
        android:src="@drawable/guide_five_icon" />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_140"
        android:layout_marginTop="@dimen/ui_330">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="您还未实名认证"
            android:textColor="@color/navigation_bar_bg"
            android:textSize="@dimen/font_32" />

        <TextView
            android:id="@+id/tag_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text1"
            android:layout_marginTop="@dimen/ui_5"
            android:text="请尽快前往“我的”页面中进行操作"
            android:textColor="@color/navigation_bar_bg"
            android:textSize="@dimen/font_32" />

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ui_30"
            android:background="@drawable/i_know_icon"
            android:text="" />
    </RelativeLayout>
</RelativeLayout>