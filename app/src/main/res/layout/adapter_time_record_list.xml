<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navigation_bar_bg">

    <RelativeLayout
        android:id="@+id/rel_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ui_30"
        android:paddingBottom="@dimen/ui_30">

        <TextView
            android:id="@+id/text_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2104-5-5"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_30"/>

        <TextView
            android:id="@+id/text_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text="1999-1-1"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_30"/>

        <TextView
            android:id="@+id/text_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ui_30"
            android:layout_alignParentRight="true"
            android:text="0分钟"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_30"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/rel_lay"
        android:background="@color/color_f0eff5"/>
</RelativeLayout>
