<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/ui_30"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_260"
        android:layout_toLeftOf="@+id/image">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="3.预约功能抓紧建设中"
            android:textColor="@color/navigation_bar_bg"
            android:textSize="@dimen/font_32" />

        <TextView
            android:id="@+id/tag_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text1"
            android:layout_marginTop="@dimen/ui_5"
            android:text="敬请期待~~"
            android:textColor="@color/navigation_bar_bg"
            android:textSize="@dimen/font_32" />

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tag_view"
            android:layout_marginTop="@dimen/ui_30"
            android:text=""
            android:background="@drawable/i_know_icon" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/ui_160"
        android:layout_marginRight="@dimen/ui_150"
        android:src="@drawable/guide_three_icon" />
</RelativeLayout>