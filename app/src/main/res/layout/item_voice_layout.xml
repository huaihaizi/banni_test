<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_white_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/image_white_triangle" />

        <TextView
            android:id="@+id/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_text_white_bg"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="5dp"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="5dp"
            android:textColor="@color/color_000000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/voice_play_animation"
            android:padding="@dimen/dp_10" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:src="@mipmap/image_listen_header_icon" />

            <ImageView
                android:id="@+id/image_yellow_triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="40dp"
                android:src="@mipmap/image_yellow_triangle" />

            <TextView
                android:id="@+id/eidt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="43dp"
                android:layout_toLeftOf="@+id/image_yellow_triangle"
                android:background="@drawable/shape_text_yellow_bg"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="5dp"
                android:textColor="@color/color_000000"
                tools:text="Android是一种基于Linux的自由及开放源代码的操作系统。主要使用于移动设备，如智能手机和平板电脑，由Google公司和开放手机联盟领导及开发。"
                android:textSize="15sp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
