<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/navigation_bar_bg</item>
        <item name="colorPrimaryDark">@color/navigation_bar_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppWelcome" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/welcome_bg</item>
        <!--两种方式都可以实现全面屏展示 1。是继承系统自带的样式 2.是编写属性样式-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="enter_mall_lin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ui_88</item>
        <item name="android:background">@color/navigation_bar_bg</item>
        <item name="android:paddingLeft">@dimen/navigation_bar_edit_margin</item>
        <item name="android:paddingRight">@dimen/navigation_bar_edit_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="DefaultDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="province_radiobtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/navigation_bar_edit_margin</item>
        <item name="android:textColor">@drawable/radiobutton_textcolorchange_deep_gray</item>
        <item name="android:background">@drawable/radiobutton_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/font_30</item>
    </style>

    <style name="modify_personal_radiobutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/selector_checkbox</item>
        <item name="android:textColor">@color/color_292929</item>
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/navigation_bar_edit_margin</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- navigation style -->
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 欢迎界面主题 -->
    <style name="WelcomeEntranceActionBarTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="maskDialog" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/colorMask</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
